<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.jaygoo.widget.VerticalRangeSeekBar
        android:id="@+id/sb_vertical_2"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@+id/btnApply"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rsb_gravity="bottom"
        app:rsb_progress_height="@dimen/_12sdp"
        app:rsb_indicator_background_color="@color/white"
        app:rsb_indicator_height="wrap_content"
        app:rsb_indicator_padding_bottom="@dimen/_6sdp"
        app:rsb_indicator_padding_left="@dimen/_6sdp"
        app:rsb_indicator_padding_right="@dimen/_6sdp"
        app:rsb_indicator_padding_top="@dimen/_6sdp"
        app:rsb_indicator_radius="@dimen/_2sdp"
        app:rsb_indicator_show_mode="alwaysShow"
        app:rsb_indicator_text_color="@color/teal_700"
        app:rsb_indicator_text_orientation="vertical"
        app:rsb_indicator_text_size="@dimen/_14sdp"
        app:rsb_indicator_width="wrap_content"
        app:rsb_mode="range"

        app:layout_constraintCircleRadius="@dimen/_15sdp"
        app:rsb_orientation="left"
        app:rsb_progress_color="@color/teal_700"
        app:rsb_progress_default_color="@color/colorProgressDefault"
        app:rsb_progress_drawable="@drawable/progress"
        app:rsb_progress_drawable_default="@drawable/progress_defalut"
        app:rsb_steps="5"
        app:rsb_thumb_drawable="@drawable/thumb_custom"
        app:rsb_tick_mark_layout_gravity="bottom"
        app:rsb_tick_mark_mode="number" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnApply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/btn_apply"
        android:textAllCaps="false"
        android:paddingTop="@dimen/_20sdp"
        android:paddingBottom="@dimen/_20sdp"
        android:textSize="@dimen/_18sdp"
        android:fontFamily="@font/sfprotext_medium"
        android:paddingRight="@dimen/_60sdp"
        android:paddingLeft="@dimen/_60sdp"
        app:cornerRadius="@dimen/_75sdp"
        android:elevation="@dimen/_50sdp"
        android:backgroundTint="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:fontFamily="@font/sfprotext_medium"
        android:text="@string/txt_minimum_cost"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/sb_vertical_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sb_vertical_2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginLeft="@dimen/_6sdp"
        android:fontFamily="@font/sfprotext_medium"
        android:text="@string/txt_maximum_cost"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sb_vertical_2"
        app:layout_constraintTop_toTopOf="@+id/sb_vertical_2" />
</androidx.constraintlayout.widget.ConstraintLayout>